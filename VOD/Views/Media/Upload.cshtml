@model MediaUploadViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">آپلود اصلی</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="Title">موضوع</label>
                            <input type="text" asp-for="Title" class="form-control" id="Title">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Description">توضیحات</label>
                            <textarea asp-for="Description" class="form-control" rows="4" id="Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Video">ویدیو</label>
                            <input type="file" asp-for="Video" class="form-control" id="Video">
                            <span asp-validation-for="Video" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Image">تصویر</label>
                            <input type="file" asp-for="Image" class="form-control" id="Image">
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="VideoPart">پارت ویدیو</label>
                            <select asp-for="VideoPart" class="form-control" id="VideoPart">
                                <option value="1">Part 1</option>
                                <option value="2">Part 2</option>
                                <option value="3">Part 3</option>
                                <option value="4">Part 4</option>
                            </select>
                            <span asp-validation-for="VideoPart" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="VideoSpeaker">سخنران</label>
                            <input type="text" asp-for="VideoSpeaker" class="form-control" id="VideoSpeaker">
                            <span asp-validation-for="VideoSpeaker" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary float-right">ثبت</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
